<Window x:Class="TeslaRevitTools.EquipmentTagQuality.FindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeslaRevitTools.EquipmentTagQuality"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="FindReplaceWindow" Height="150" Width="240">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="3" Margin="-10"></Border>
        <Border BorderBrush="DarkGray" BorderThickness="1" Grid.RowSpan="3" Margin="-5"></Border>

        <Label Content="Old value:" VerticalAlignment="Center"></Label>
        <TextBox x:Name="OldBox" HorizontalAlignment="Left" VerticalAlignment="Center" Text="" Margin="90,0,0,0" Width="125" Height="22"></TextBox>
        <Label Content="New value:" Grid.Row="1" VerticalAlignment="Center"></Label>
        <TextBox x:Name="NewBox" HorizontalAlignment="Left" VerticalAlignment="Center" Text="" Margin="90,0,0,0" Width="125" Grid.Row="1" Height="21"></TextBox>
        <Button Content="Cancel" Grid.Row="2" HorizontalAlignment="Left" Margin="5,5,0,5" Width="70" Click="BtnCancel"></Button>
        <Button Content="Find/Replace" Padding="5,0,5,0" Grid.Row="2" HorizontalAlignment="Left" Margin="90,5,0,5" Click="BtnApply" Width="125"></Button>

    </Grid>
</Window>
